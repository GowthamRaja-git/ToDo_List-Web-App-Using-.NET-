@model TodoListApp.Models.Todo

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Task</title>
    <style>
        #add-form {
            display: flex;
            flex-direction: column;
            max-width: 800px;
            margin: 20px auto;
            padding: 20px;
            background-color: #ffffff;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            gap: 15px;
        }

            #add-form label {
                font-weight: bold;
                color: #333;
            }

        .form-group {
            display: flex;
            justify-content: space-between;
            align-items: center;
            gap: 10px;
        }

            .form-group input {
                flex: 1;
                padding: 12px;
                font-size: 16px;
                border: 1px solid #ccc;
                border-radius: 4px;
                outline: none;
                transition: border-color 0.3s ease-in-out;
            }

                .form-group input:focus {
                    border-color: #4CAF50;
                }

        .btn-primary {
            margin-top: 20px;
            padding: 12px;
            background-color: #4CAF50;
            color: white;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-size: 16px;
            transition: background-color 0.3s ease-in-out;
        }

            .btn-primary:hover {
                background-color: #45a049;
            }
    </style>
</head>
<body>
    <form asp-action="Create" method="post" id="add-form">
        @Html.AntiForgeryToken()
        <div class="form-group">
            <label for="Task" style="min-width: 100px;">Task</label>
            <label for="DeadlineDate" style="min-width: 150px;">Deadline Date</label>
            <label for="DeadlineTime" style="min-width: 150px;">Deadline Time</label>
        </div>
        <div class="form-group">
            <input type="text" asp-for="Task" class="form-control" required>
            <input type="date" asp-for="DeadlineDate" class="form-control">
            <input type="time" asp-for="DeadlineTime" class="form-control">
        </div>
        <button type="submit" class="btn-primary">
            Add
        </button>
    </form>
</body>
</html>
